[bar/bar]
font-0 = "Iosevka:size=11;3"
font-1 = "Font Awesome 5 Free:pixelsize=8;3"
font-2 = "Font Awesome 5 Free Solid:pixelsize=8;3"
font-3 = "Font Awesome 5 Brands:pixelsize=8;3"

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

fixed-center = true

width = 100%
height = 30

bottom = true

background = #181818
foreground = #d0d0d0

radius = 0.0

padding-left = 1
padding-right = 1
module-margin = 0

modules-left = bspwm title
modules-right = memory cpu pulseaudio battery date

[bar/DP-3]
inherit = bar/bar

monitor = DP-3

[bar/eDP-1-1]
inherit = bar/bar

monitor = eDP-1-1

[bar/HDMI-0]
inherit = bar/bar

monitor = HDMI-0

[module/memory]
type = internal/memory
interval = 3
format = <label>
label = RAM %gb_used%
label-padding = 1.5

[module/cpu]
type = internal/cpu
interval = 0.5
format = <label>
label = "CPU %percentage%%"
label-padding = 1.5

[module/battery]
type = internal/battery
full-at = 99
battery = BAT0
adapter = ADP1
poll-interval = 5
time-format = %H:%M
format-charging = <label-charging>
format-discharging = <label-discharging>
format-full = <label-full>

label-charging = "BAT %percentage%%"
label-charging-padding = 1

label-discharging = "BAT %percentage%%"
label-discharging-padding = 1

label-full = "BAT %percentage%%"
label-full-padding = 1

[module/bspwm]
type = internal/bspwm
format = <label-state>
index-sort = true

enable-click = true
reverse-scroll = false

label-focused = 
label-focused-padding = 1

label-occupied = 
label-occupied-padding = 1

label-empty = 
label-empty-padding = 1

[module/date]
type = internal/date
interval = 1.0
date = | %A, %d %B %H:%M

[module/title]
type = internal/xwindow
format-foreground = #414141
label-empty = Desktop
format-padding = 1
label-maxlen = 50

[module/pulseaudio]
type = internal/pulseaudio

format-volume-padding = 1.5
format-muted-padding = 1.5
format-volume = <label-volume>
label-volume = VOL %percentage%%
label-muted = muted
label-muted-foreground = #414141
label-volume-foreground = ${root.foreground}
