format-discharging-underline = ${colors.foreground}
format-full-prefix = "BAT "
ramp-capacity-0 = "BAT "
ramp-capacity-1 = "BAT "
ramp-capacity-2 = "BAT "
ramp-capacity-3 = "BAT "
ramp-capacity-4 = "BAT "

