[bar/bar]
enable-ipc=true
height = 30

background = ${colors.background}
;background = ${colors.primary}
foreground = ${colors.foreground}

padding=0
font-0=Iosevka:size=11;3
font-1=IPAGothic:size=12:antialias=true;3

dpi = 100

modules-left =  bspwm
modules-center = time 
modules-right = battery pulseaudio

scroll-up = bspwn-wsnext
scroll-down = bspwn-wsprev

wm-restack = bspwm
override-redirect = false

[bar/DP-3]
inherit = bar/bar

monitor = DP-3

[bar/eDP-1-1]
inherit = bar/bar

monitor = eDP-1-1

[bar/HDMI-0]
inherit = bar/bar

monitor = HDMI-0

